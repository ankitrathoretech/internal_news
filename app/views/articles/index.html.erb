<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.subtitle {
  color: grey;
  font-size: 22px;
}

.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.card button:hover {
  opacity: 0.7;
}
</style>

 <% @articles.each do |article| %>
    <div class="card">
        <%= image_tag article.image, style: 'height:100%;width:100%;'%>
        <h1><%= article.title %></h1>
        <p class="subtitle"><%= article.subtitle %></p>
        <p><%= article.body %></p>
        <p><button><%= link_to "Go to article", article_path(article), style: "color:black" %></button></p>
    </div>
<% end %>